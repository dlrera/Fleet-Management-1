# Django settings - CRITICAL: Change these in production!
SECRET_KEY=your-very-secure-secret-key-at-least-50-characters-long-with-random-symbols!@#$%^&*()
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: DATABASE_URL=postgres://user:password@localhost/dbname

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Rate Limiting & Brute Force Protection
AXES_ENABLED=True
AXES_FAILURE_LIMIT=5
AXES_COOLOFF_TIME=1

# Production settings (uncomment and modify for production)
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# DATABASE_URL=postgres://secure_user:complex_password@host:port/dbname
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECRET_KEY=your-production-secret-key-generate-new-one

